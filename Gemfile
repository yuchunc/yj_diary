source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.5'

# Database
gem 'pg'

# Authentications
gem 'devise'
gem "omniauth"
gem "omniauth-facebook"

# HTML Tool
gem 'slim'
gem 'slim-rails'
gem 'kaminari'

# Javascript
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'

# Styling
gem 'semantic-ui-sass', github: 'doabit/semantic-ui-sass'
gem 'sass-rails', '~> 4.0.3'

# Backend Utilities
gem "settingslogic"
gem 'aasm'

group :development do
  gem 'spring'
  gem 'better_errors'
  gem "binding_of_caller"
  gem "xray-rails"
  gem "pry-rails"
  gem 'pry-doc'
end

group :development, :test do
  gem 'factory_girl_rails'
end



